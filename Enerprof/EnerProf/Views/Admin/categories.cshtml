@model IEnumerable<EnerProf.Models.Category>

@{
    ViewBag.Title = "categories";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<h2>Категории</h2>

<p>
    @Html.ActionLink("Создать новую", "category")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>

        <td>
            @Html.ActionLink("Edit", "category", new { cat_id = item.Id }) |
            @Html.ActionLink("Delete", "DeleteCategory", new { cat_id = item.Id })
        </td>
    </tr>
}

</table>
